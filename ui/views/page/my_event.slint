// a simple component for schedule
component Schedule {
    in-out property <string> title : "";
    VerticalLayout {
        spacing: 5px;
        //title
        SText {
            x: (parent.width)/2-(parent.x);
            color: Token.color.on-surface;
            font-size: Token.font.title.large.size;
            text: title;
        }
        //SDvider
        SDivider {
            //y: parent.y+40px;
            width: 40%;
            height: 2px;
            }
        //SText && STimeLine (separate)
        @children
    }
}


// 报名活动完整卡片
component SignForm {
    Rectangle {
        preferred-height: 200px;
        preferred-width: 500px;
        mes := Rectangle{
            x: (parent.x)+30px;
            y: (parent.y)-20px;
            preferred-height: 200px;
            preferred-width: 50px;
            property <string> data : "日期";
            property <string> place : "地点";
            property <string> time : "时间";
            VerticalLayout {
                alignment: center;
                SText {
                    color: Token.color.outline;
                    text: data;
                }
                SText{
                    color: Token.color.outline;
                    text: place;
                }
                SText{
                    color: Token.color.outline;
                    text: time;
                }
            }
        }
        SignLine {
            x: mes.x + 50px;
            y: mes.y + 20px;
            width: 5%;
            height: parent.height;
        }
    }
}

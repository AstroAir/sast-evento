{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "native",
            "inherits": "base",
            "displayName": "Native"
        },
        {
            "name": "msvc",
            "inherits": "native",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "msvc-x64",
            "inherits": "msvc",
            "displayName": "MSVC x64",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "msvc-x86",
            "inherits": "msvc",
            "displayName": "MSVC x86",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            }
        },
        {
            "name": "msvc-arm64",
            "inherits": "msvc",
            "displayName": "MSVC ARM64",
            "architecture": {
                "value": "arm64",
                "strategy": "external"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "native",
            "displayName": "Ninja Multi-Config"
        },
        {
            "name": "native-debug",
            "displayName": "Native Debug",
            "configuration": "Debug"
        },
        {
            "name": "native-release",
            "displayName": "Native Release",
            "configuration": "Release"
        },
        {
            "name": "native-relwithdebinfo",
            "displayName": "Native RelWithDebInfo",
            "configuration": "RelWithDebInfo"
        }
    ],
    "testPresets": []
}